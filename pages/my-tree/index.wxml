<!--index.wxml-->
<view class="container">
    <view class='item' wx:key="{{index}}" wx:for="{{trees}}" bindtap="onItemTap">
      <image class="left" src="{{item.img}}"></image>
      <view class="right">
        <text class="name">{{item.name}}
        </text>
        <text class="location"><tt-icon type='location'></tt-icon>{{item.province}}.{{item.city}}
        </text>
        <text class="days"><tt-icon type='report'></tt-icon>{{days}}天
        </text>
        <view class="purchase">
          <text>我还想要：</text>
          <button catchtap='onShopTap'>头条放心购</button>
          <button catchtap='onTaobaoTap'>淘宝网</button>
        </view>
      </view>
    </view>
</view>
