.container{
  width: 100%;
  min-height: 100%; 
}
.item{
  width: 100%;
  padding: 40rpx;
  border-bottom: 1px solid #e8e8e8;
}
.item .left{
  float: left;
  width: 240rpx;
  height: 180rpx;
  margin: 0 30rpx 0 0;
  border-radius: 10rpx;
  position: relative;
}
.item .left .left_backImg{
  width: 100%;
  height: 100%;
  background-color: #d3d3d3;
  border-radius: 10rpx;
}
.item .left .left_icon {
  position: absolute;
  top: 0;
  left: 0;
  width: 96rpx;
  height: 40rpx;
}
.item .right{
  float: left;
}
.item .right .name{
  font-family: PingFangSC-Medium;
  font-weight: bold;
  font-size: 32rpx;
  color: rgb(34,34,34);
  line-height: 44rpx;
  display: block;
}
.item .right .location{
  font-family: PingFangSC-Medium;
  font-weight: bold;
  margin-top: 10rpx;
  font-size: 24rpx;
  line-height: 34rpx;
  display: block;
  color: rgb(153,153,153);
}
.item .right .days{
  font-family: PingFangSC-Medium;
  font-weight: bold;
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #999;
}
.item .purchase{
  padding-top: 46rpx;
  font-size: 28rpx;
  color: #222222;
  clear: both;
  display: flex;
  align-items: center;
}
.item .purchase text{
  font-size: 28rpx;
  color: rgb(34,34,34);
  line-height: 40rpx;
  font-family: PingFangSC-Medium;
  font-weight: bold;
}
.item .purchase button{
  width: 190rpx;
  height: 50rpx;
  text-align: center;
  line-height: 50rpx;
  margin-left: 20rpx;
  font-size: 24rpx;
  color: #fff;
  border-radius: 30rpx;
  background: linear-gradient(rgb(248,89,89), rgb(255,62,62));
  display: inline-block;
}

.container .noTree {
  position: absolute;
  top:40%;
  left: 50%;
  transform: translate(-50%, 0);
  font-family: PingFangSC-Medium;
  font-size: 14px;
  color: #222222;
  letter-spacing: 0;
}