<!--index.wxml-->
<view class="container">
  <view class="plant">
    <view class='cell'>
      <image src="./farm.jpg" bindtap="onPlantTap"></image>
      <view class='top'>
        {{plant.water}}ml
      </view>
      <view class='bottom'>
        <text class='name'>{{plant.name}}</text>
        <button bindtap='onBtnTap'>领取果实</button>
        <view class='envelope' bindtap='onEnvelopeTap'>
          <tt-icon type="envelope"></tt-icon><text>信箱</text>
        </view>
        <view wx:if='{{hasWatering===false}}' class='watering' bindtap='onWateringTap'>
          <tt-icon type='watering'></tt-icon><text>浇水</text>
        </view>
      </view>
    </view>
    <view class='cell photos' bindtap="onPhotoCellTap">
      <tt-icon type='img'></tt-icon>种植里程
      <text>{{photos.length}}张</text>
    </view>
    <view class='cell my-tree' bindtap="onMyTreeCellTap">
      <tt-icon type='tree'></tt-icon>我的果树
      <text>></text>
    </view>
  </view>
  <view class="rank">
    <view class='title'>
      排行榜.{{location}}
    </view>
    <view class='item' wx:key="{{index}}" wx:for="{{rankList}}">
      {{index+1}} <tt-avatar src="http://219.129.73.200:81/my_uppic/touxiang/big/touxiang%20(3).jpg"></tt-avatar> {{item.name}} <text class='water'>{{item.water}}ml</text>
    </view>
  </view>
</view>
