/**index.wxss**/
.plant{
  width: 100%;
  box-sizing: border-box;
}
.plant .cell{
  position: relative;
}
.plant .cell .bg{
  width: 100%;
  height: 353px;
}
.plant .cell .top{
    top: 0;
    left: 0;
    right: 0;
    width: 100%;
    position: absolute;
}
.plant .cell .top .name{
  color: rgb(0, 95, 39);
  float: left;
  font-size: 14px;
  line-height: 14px;
  margin: 46rpx 0 0 40rpx;
}
.plant .cell .top .energy{
  float: right;
  margin: 28rpx 40rpx 0 0;
  position: relative;
}
.plant .cell .top .energy image{
  width: 350rpx;
  height: 32rpx;
}
.plant .cell .top .energy text{
  position:absolute;
  right:15rpx;
  top:-5rpx;
  font-size:10px;
}
.plant .cell .bottom{
  bottom: 10px;
  left: 10px;
  right: 10px;
  position: absolute;
}
.plant .cell .bottom text{
  line-height: 20px;
}
.plant .cell .bottom .name{
  float: left;
  margin-right: 10px;
}
.plant .cell .bottom button{
  width: auto;
  height: 20px;
  line-height: 20px;
  font-size: 12px;
  float: left;
}
.plant .cell .bottom .envelope,
.plant .cell .bottom .watering{
  float: right;
  margin-right: 10rpx;
}
.plant .cell .bottom .envelope tt-icon{
  position: absolute;
  bottom: 70rpx;
  right: 15rpx;
}
.plant .cell .bottom .watering tt-icon{
  position: absolute;
  bottom: 75rpx;
  right: 75rpx;
}
.plant .cell{
  border-bottom: 1px solid #f2f2f2;
  line-height: 82rpx;
  margin: 0 36rpx;
}
.plant .cell.img{
  height: 353px;
  border:none;
  margin: 0;
}
.plant .cell.photos text{
  float: right;
}
.plant .cell.photos tt-icon{
  position: relative;
  top: 5px;
  margin-right: 5px;
}
.plant .cell.my-tree text{
  float: right;
}
.plant .cell.my-tree tt-icon{
  position: relative;
  top: 5px;
  margin-right: 5px;
}


.rank{
  border-top: 10px solid rgb(245, 245, 245);
  width: 100%;
}
.rank .title{
  padding: 0 20px;
  line-height: 92rpx;
  font-size: 16px;
  border-bottom: 1px solid #f2f2f2;
}
.rank .item{
  margin: 0 0 0 20px;
  line-height: 120rpx;
  padding-right: 20px;
  border-bottom: 1px solid rgb(241, 241, 241);
}
.rank .item tt-avatar image{
  width:76rpx;
  height:76rpx;
  border-radius:8rpx;
  position:relative;
  top: 30rpx;
  margin: 0 20rpx;
}
.rank .item .water{
  float: right;
  line-height: 132rpx;
}