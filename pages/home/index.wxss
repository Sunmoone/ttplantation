/**index.wxss**/
.plant{
  width: 100%;
  box-sizing: border-box;
}
.plant .cell{
  position: relative;
  border-bottom: 1px solid #f2f2f2;
  line-height: 82rpx;
  margin: 0 36rpx;
}
.plant .cell.img{
  height: 353px;
  border:none;
  margin: 0;
}
.plant .cell .bg{
  width: 100%;
  height: 353px;
}
.plant .cell .top{
    top: 0;
    left: 0;
    right: 0;
    width: 100%;
    position: absolute;
}
.plant .cell .top .name{
  color: rgb(0, 95, 39);
  float: left;
  font-size: 14px;
  line-height: 14px;
  margin: 46rpx 0 0 40rpx;
}
.plant .cell .top .energy{
  float: right;
  margin: 28rpx 40rpx 0 0;
  position: relative;
}
.plant .cell .top .energy image{
  width: 350rpx;
  height: 32rpx;
}
.plant .cell .top .energy text{
  position:absolute;
  right:15rpx;
  top:-5rpx;
  font-size:10px;
}
.plant .cell.img tt-icon{
  position: absolute;
  bottom: 130rpx;
  left: 100rpx;
  width: 66rpx;
  height: 50rpx;
}
.plant .cell.img tt-icon image{
  width: 100%;
  height: 100%;
}

.plant .cell.photos text{
  float: right;
}
.plant .cell.photos tt-icon{
  position: relative;
  top: 5px;
  margin-right: 5px;
}
.plant .cell.my-tree text{
  float: right;
}
.plant .cell.my-tree tt-icon{
  position: relative;
  top: 5px;
  margin-right: 5px;
}


.rank{
  border-top: 10px solid rgb(245, 245, 245);
  width: 100%;
}
.rank .title{
  padding: 0 20px;
  line-height: 92rpx;
  font-size: 16px;
  border-bottom: 1px solid #f2f2f2;
}
.rank .item{
  margin: 0 0 0 20px;
  line-height: 120rpx;
  padding-right: 20px;
  border-bottom: 1px solid rgb(241, 241, 241);
}
.rank .item tt-avatar image{
  width:76rpx;
  height:76rpx;
  border-radius:8rpx;
  position:relative;
  top: 30rpx;
  margin: 0 20rpx;
}
.rank .item .water{
  float: right;
  line-height: 132rpx;
}


.invite{
  margin: 60rpx auto 0 auto;
}
.invite text{
  display: block;
  width: 100%;
  text-align: center;
}
.invite text.code{
  font-size: 24px;
  font-weight: bold;
  color: rgb(34, 34, 34);
}
.invite text.my-code{
  font-size: 12px;
  color: rgb(153, 153, 153);
  margin-top: 4rpx;
}
.invite text.tip{
  margin-top: 4rpx;
  font-size: 12px;
  color: rgb(34, 34, 34);
}
.invite input{
  width: 680rpx;
  line-height: 88rpx;
  height: 88rpx;
  text-align: center;
  font-size: 14px;
  margin-top: 56rpx;
  border: 2px solid rgb(24, 217, 111);
  border-radius: 200rpx;
}
.bottom-img{
  margin-top: 120rpx;
  width: 100%;
  height: 80rpx;
  position: relative;
  top: 1px;
}