/* pages/envelope/index.wxss */

.banner{
  width: 100%;
  height: 284rpx;
}
.list{
  width: 100%;
  padding: 0 40rpx;
}
.list .item{
  width: 100%;
  border: 1px solid #f2f2f2;
  position: relative;
  margin: 40rpx 0;
  padding: 46rpx 46rpx 26rpx 46rpx;
  box-sizing: border-box;
  box-shadow: rgba(55,171,255,.28) 0 2px 10px 0;
}
.list .item text{
  display: block;
  width: 100%;
}
.list .item .content{
  display: block;
  font-size: 16px;
  font-weight: bold;
}
.list .item .date-from{
  text-align: right;
  margin-right: 44rpx;
  font-size: 12px;
  color: rgb(187, 187, 187);
}
.no-more{
  display: block;
  width: 100%;
  margin: 74rpx 0;
  color: rgb(153, 153, 153);
  font-size: 12px;
  text-align: center;
}


.card{
  display: none;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  width: 560rpx;
  height: auto;
}
.card .card-close{
  position: absolute;
  right: -10rpx;
  top: -10rpx;
  width: 10rpx;
}

