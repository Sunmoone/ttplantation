/* pages/envelope/index.wxss */

.banner{
  width: 100%;
  height: 284rpx;
}
.list{
  width: 100%;
  padding: 0 40rpx;
}
.list .item{
  width: 100%;
  border: 1px solid #f2f2f2;
  position: relative;
  margin: 40rpx 0;
  padding: 46rpx 46rpx 26rpx 46rpx;
  box-sizing: border-box;
  box-shadow: rgba(55,171,255,.28) 0 2px 10px 0;
}
.list .item text{
  display: block;
  width: 100%;
}
.list .item .content{
  display: block;
  font-size: 16px;
  font-weight: bold;
}
.list .item .date-from{
  text-align: right;
  margin-right: 44rpx;
  font-size: 12px;
  color: rgb(187, 187, 187);
}
.no-more{
  display: block;
  width: 100%;
  margin: 74rpx 0;
  color: rgb(153, 153, 153);
  font-size: 12px;
  text-align: center;
}


.mask-card{
  position: absolute;
  top: -1px;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0, .6);
}
.mask-card .card{
  width: 560rpx;
  height: 840rpx;
  position: absolute;
  margin: 0 auto;
  top: 144rpx;
  left: 0;
  right: 0;
  border-radius: 20rpx;
  background: #fff;
}
.mask-card .card .tt-icon.close{
  position: absolute;
  top: -20rpx;
  right: -20rpx;
  width: 60rpx;
  height: 60rpx;
}
.mask-card .card .card-cover{
  width: 100%;
  height: 420rpx;
  border-radius: 20rpx 20rpx 0 0;
}
.mask-card .card .card-content{
  padding: 40rpx;
  color: #666;
  font-size: 12px;
}
.mask-card .card .card-content .title{
  font-size: 14px;
  font-weight: bold;
  margin-bottom: 14rpx;
}
.mask-card .card .card-content button{
  width: 480rpx;
  height: 80rpx;
  line-height: 80rpx;
  background: #01a744;
  color: #fff;
  margin: 46rpx 0 0 0;
}
.mask-card .card .receive-img{
  width: 580rpx;
  height: 126rpx;
  position: absolute;
  top: -40rpx;
  left: 0;
}