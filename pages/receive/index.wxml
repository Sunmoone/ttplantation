<!--pages/receive/index.wxml-->
<view class='container'>
  <view class='form'>
    <view class='form-item'>
      <text class='form-label'>收货人</text>
      <input placeholder='请输入收货人姓名' value='{{name}}'></input>
    </view>
    <view class='form-item'>
      <text class='form-label'>联系电话</text>
      <input value='{{mobile}}' type='tel' placeholder='请输入联系电话'></input>
    </view>
    <view class='form-item'>
      <text class='form-label'>所在地区</text>
      <text>请选择></text>
    </view>
    <view class='form-item'>
      <text class='form-label'>详细地址</text>
      <textarea value='{{address}}' placeholder='请输入详细地址信息，如道路、门牌号、小区、楼栋号、单元室等等'></textarea>
    </view>
  </view>
  <view class='btn-wrap'>
    <button bindtap='onSubmit'>填写完成</button>
  </view>
</view>
