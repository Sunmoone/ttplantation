/* pages/receive/index.wxss */
.address {
  width:100%;
  height: 100%;
  background-color: #fff;
  color: rgb(34, 34, 34);
  font-family: PingFangSC-Medium;
}

.address_title {
  padding: 80rpx 40rpx 40rpx 40rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
  font-size: 40rpx;
}

.address_form .form-item{
  margin: 0 40rpx 0 40rpx;
  padding: 40rpx 0 24rpx 0;
  border-bottom: 2rpx solid rgb(232,232,232);
  display: flex;
  font-size: 28rpx;
  align-items: center;
}
.address_form .form-label{
  min-width: 120rpx;
}
.address_form .form-item picker text{
  font-size: #999;
}
.address_form .form-item .form-more {
  width: 14rpx;
  height: 26rpx;
  margin-left: 20rpx;
}
.address_form .form-input {
  flex: 1;
  text-align: right;
}
.address_form .form-item-address{
  margin: 0 40rpx 0 40rpx;
  padding: 40rpx 0 24rpx 0;
  font-size: 28rpx;
}
.address_form .form-item-address textarea {
  font-family: PingFangSC-Regular;
  margin: 20rpx 0 0 0;
  padding: 30rpx;
  font-size: 28rpx;
  color: rgb(153,153,153);
  display: block;
  width: 100%;
  height: 200rpx;
  box-sizing: border-box;
  background-color: rgb(245, 245, 245);
  border-radius: 8rpx;
  line-height: 40rpx;
}

.address_button{
  width: 100%;
  padding: 20rpx;
}
.address_button button{
  width:100%;
  margin: 20rpx 0;
  line-height: 80rpx;
  display: block;
  color: #fff;
  text-align: center;
  border-radius: 40rpx;
  height: 80rpx;
}
.inactive{
  background-color: rgb(187,187,187);
}
.active{
  background-color: rgb(1,167,68);
}