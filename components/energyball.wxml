<!--components/energyball.wxml-->
<template name='energy-ball'>
<view data-index="{{index}}" class="energy-ball {{received?'received':''}}" style="bottom: {{bottom}}px;left: {{left}}px; animation-delay:{{delay}}s;" bindtap='{{onTap}}'>
  <image data-index='{{index}}' src='http://10.8.127.110/images/components/energy-ball.png'></image>
  <text>{{num}}</text>
</view>
</template>
