
.energy-ball{
  position: absolute;
  bottom: 200rpx;
  left: 120rpx;
  animation: energy-ball-ani 5s linear infinite;
}
@keyframes energy-ball-ani{
  0%{
    transform: translate(0, 0);
  }
  25%{
    transform: translate(0, 5px);
  }
  50%{
    transform: translate(0, 0);
  }
  75%{
    transform: translate(0, -5px);
  }
  100%{
    transform: translate(0, 0);
  }
}
.energy-ball image{
  width: 100rpx;
  height: 100rpx;
}
.energy-ball text{
  position: absolute;
  top: 15rpx;
  left: 30rpx;
  color: #008bb4;
}