.mask-card{
  top: -1px;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 2;
  position: fixed;
  background: rgba(0,0,0, .6);
}
.mask-card .card{
  width: 560rpx;
  min-height: 740rpx;
  position: absolute;
  margin: 0 auto;
  top: 50%;
  left: 0;
  right: 0;
  border-radius: 20rpx;
  background: #fff;
  transform: translate(0, -50%);
}
.mask-card .card .tt-icon.close{
  position: absolute;
  top: -30rpx;
  right: -30rpx;
  width: 60rpx;
  height: 60rpx;
}
.mask-card .card .card-title{
  position: absolute;
  top: -55rpx;
  left: -15rpx;
  width: 592rpx;
  height: 126rpx;
}
.mask-card .card .card-cover{
  width: 100%;
  height: 420rpx;
  border-radius: 20rpx 20rpx 0 0;
}
.mask-card .card .card-content{
  padding: 40rpx;
  color: #666;
  font-size: 12px;
}
.mask-card .card .card-content .title{
  font-size: 14px;
  font-weight: bold;
  margin-bottom: 14rpx;
  color: #222222;
}
.mask-card .card .card-content button{
  width: 480rpx;
  height: 80rpx;
  line-height: 80rpx;
  background: #01a744;
  color: #fff;
  margin: 46rpx 0 0 0;
  border-radius: 200rpx;
}
.mask-card .card .receive-img{
  width: 580rpx;
  height: 126rpx;
  position: absolute;
  top: -40rpx;
  left: 0;
}